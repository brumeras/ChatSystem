<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.chat.ChatController">

    <!-- Prisijungimo dalis -->
    <HBox spacing="10.0">
        <TextField fx:id="nicknameField" promptText="Įveskite vardą" />
        <TextField fx:id="roomField" promptText="Įveskite kambario pavadinimą" />
        <Button text="Prisijungti" onAction="#setNickname" />
    </HBox>

    <!-- Chat'o zona -->
    <TextArea fx:id="chatArea" editable="false" prefHeight="400.0" wrapText="true" />

    <!-- Žinutės siuntimo zona -->
    <HBox spacing="10.0">
        <TextField fx:id="inputField" promptText="Rašykite žinutę..." HBox.hgrow="ALWAYS"/>
        <Button text="Siųsti" onAction="#sendMessage" />
    </HBox>

</VBox>
